{{> header}}
<div class="limiter">
    <div class="container-login100">
        <div class="wrap-login100 p-b-90">
            <form class="login100-form validate-form flex-sb flex-w" method="POST" action="/users/Register">
                <span class="login100-form-title p-b-51">
                    Register
                </span>
                <small style="color: red;">{{message}}</small>
                <div class="wrap-input100 validate-input m-b-16" data-validate="Full  name  is required">
                    <input type="text" class="form-control" id="txtFullName" name="fullname"
                        placeholder="Enter Full Name" value={{User.fullname}}>
                </div>
                <div class="wrap-input100 validate-input m-b-16" data-validate="Email is required">
                    <input type="email" class="form-control" id="txtEmailAddress" name="username"
                        aria-describedby="emailHelp" placeholder="Enter email" value={{User.username}}>
                </div>
                <div class="wrap-input100 validate-input m-b-16" data-validate="Password is required">
                    <input type="password" class="form-control" id="txtPassword" name="password" placeholder="Password"
                        required value={{User.password}} >
                </div>
                <div class="container-login100-form-btn m-t-17">
                    <button class="login100-form-btn">
                        Register
                    </button>
                </div>
                <div class="col" style="margin-top:10px;text-align: right;">
                    <a href="/login" class="txt1">
                        login ?
                    </a>
                </div>

            </form>
        </div>
    </div>
</div>